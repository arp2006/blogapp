<%- include('partials/header.ejs') %>

    <% locals.posts.forEach(function(post) { %>
        <div class="post-container">
            <h2><a href="/posts/<%= post.title %>"><%= post.title %></a></h2>
            <p>
                <%= post.content.substring(0, 100) %><% if (post.content.length > 100) { %>...<% } %>
            </p>
        </div>
    <% }) %>
    
